<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_F7FFF3"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:scrollbars="none"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="141.5dp"
                android:layout_height="140.5dp"
                android:src="@drawable/ic_login_logo"
                android:id="@+id/login_logo_img"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:text="刺猬密保"
                android:textColor="@color/color_333333"
                android:layout_below="@id/login_logo_img"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_7ED8CF"
                android:layout_marginTop="33dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/ic_phone_logo"
                    android:scaleType="centerInside" />

                <EditText
                    android:id="@+id/login_phone_et"
                    android:layout_width="fill_parent"
                    android:layout_height="33dp"
                    android:background="@null"
                    android:maxLines="1"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:cursorVisible="true"
                    android:hint="请输入手机号"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:id="@+id/line_code"
                android:visibility="gone"
                android:background="@color/color_7ED8CF" />
            <LinearLayout
                android:id="@+id/ll_verify"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/ic_verify_img"
                    android:scaleType="centerInside" />
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:id="@+id/regis_et_verify_code"
                    android:background="@color/translate"
                    android:hint="请输入验证码"
                    android:paddingLeft="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/color_333333"
                    android:inputType="number" />

                <Button
                    android:id="@+id/btn_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:text="获取验证码"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp"
                    android:background="@color/translate"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:id="@+id/line_email_line"
                android:visibility="gone"
                android:background="@color/color_7ED8CF" />

            <LinearLayout
                android:id="@+id/ll_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/ic_email_logo"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:id="@+id/login_email_et"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:maxLines="1"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:cursorVisible="true"
                    android:hint="请输入邮箱"
                    android:layout_weight="1"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_7ED8CF" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/ic_login_password"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp" />
                <EditText
                    android:id="@+id/login_password_et"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:cursorVisible="true"
                    android:hint="请输入密码"
                    android:layout_weight="1"
                    android:password="true"
                    android:inputType="text"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_forget_pwd"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_333333"
                    android:text="忘记密码"
                    android:textSize="12sp"
                    android:background="@color/translate"
                    android:layout_gravity="center_vertical"
                    android:layout_height="33dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_7ED8CF" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="登录"
                android:layout_marginLeft="12.5dp"
                android:layout_marginRight="12.5dp"
                android:textColor="@color/color_FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="30dp"
                android:background="@color/color_65C5CD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/color_333333"
                android:text="刺猬密保账号?"
                android:layout_marginTop="23dp"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/btn_temp_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textColor="@color/color_65C5CD"
                android:background="@color/translate"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>