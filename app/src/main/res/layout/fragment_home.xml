<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/color_E6E6E6"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/home_ll_bind_account"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:id="@+id/rl_bind_account"
            android:layout_width="fill_parent"
            android:background="@color/color_FFFFFF"
            android:layout_weight="1"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_home_account"
                android:layout_centerInParent="true"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/home_tv_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_5a5a5a"
                android:text="绑定账号:"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:layout_alignParentBottom="true" />

            <TextView
                android:id="@+id/home_bind_count_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:text="2"
                android:layout_toRightOf="@id/home_tv_bind"
                android:layout_marginBottom="7dp"
                android:layout_alignBottom="@id/home_tv_bind"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="@color/color_FFFFFF"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_5a5a5a"
                android:text="今日授权:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/home_tv_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_516075"
                android:text="7"
                android:textStyle="bold"
                android:textSize="75sp"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/home_tv_authorize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_5a5a5a"
                android:text="总授权:"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:layout_alignParentBottom="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:text="22"
                android:layout_marginBottom="7dp"
                android:layout_toRightOf="@+id/home_tv_authorize"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="@color/color_FFFFFF"
            android:layout_weight="1"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_home_note"
                android:layout_centerInParent="true"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/home_tv_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_5a5a5a"
                android:text="密码笔记:"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:layout_alignParentBottom="true" />

            <TextView
                android:id="@+id/home_tv_note_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:text="22"
                android:layout_toRightOf="@id/home_tv_note"
                android:layout_marginBottom="7dp"
                android:layout_alignBottom="@id/home_tv_note"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="@color/color_FFFFFF"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_height="fill_parent">

            <com.ciwei.client.view.CircleImageView
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:src="@drawable/ic_launcher"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="@color/color_FFFFFF"
            android:layout_weight="1"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/home_iv_app"
                android:layout_width="54dp"
                android:layout_height="52.5dp"
                android:src="@drawable/ic_recommend_app"
                android:layout_centerInParent="true"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="12sp"
                android:layout_toRightOf="@id/home_iv_app"
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:layout_above="@id/home_iv_app"
                android:background="@drawable/ic_recommend_bg" />

            <TextView
                android:id="@+id/home_tv_app"
                android:layout_width="24dp"
                android:layout_height="17dp"
                android:textColor="@color/color_5a5a5a"
                android:text="应用推荐:"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:layout_alignParentBottom="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:text="22"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/home_tv_app"
                android:textSize="20sp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="@color/color_FFFFFF"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="44.5dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_home_ad"
                android:layout_centerInParent="true"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/home_tv_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_5a5a5a"
                android:text="广告位"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>